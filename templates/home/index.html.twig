{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}
    {% if articulos is empty %}
        <div class="alert alert-info">
            No hay artículos disponibles.
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for articulo in articulos %}
                <div class="col">
                    <div class="card h-100">
                        {% if articulo.archivos|length > 0 %}
                            {% set imagen = articulo.archivos|first %}
                            <img src="{{ asset('uploads/articulos/' ~ imagen.nombreArchivo) }}" 
                                 class="card-img-top" 
                                 alt="{{ articulo.detalle }}">
                        {% else %}
                            <img src="{{ asset('images/no-image.jpg') }}" 
                                 class="card-img-top" 
                                 alt="Sin imagen">
                        {% endif %}
                        
                        <div class="card-body">
                            <h5 class="card-title">{{ articulo.detalle }}</h5>
                            <p class="card-text">
                                <strong>Código:</strong> {{ articulo.codigo }}<br>
                                <strong>Marca:</strong> {{ articulo.marca }}<br>
                                <strong>Precio:</strong> ${{ articulo.precioLista|number_format(2, ',', '.') }}
                            </p>
                            {% if articulo.novedad %}
                                <span class="badge bg-success">Novedad</span>
                            {% endif %}
                            {% if articulo.destacado %}
                                <span class="badge bg-primary">Destacado</span>
                            {% endif %}
                        </div>
                        {% if is_granted('ROLE_CLIENTE') %}
                            <div class="card-footer">
                                <button class="btn btn-primary btn-sm agregar-carrito" 
                                        data-articulo="{{ articulo.codigo }}">
                                    <i class="bi bi-cart-plus"></i> Agregar al pedido
                                </button>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %} 