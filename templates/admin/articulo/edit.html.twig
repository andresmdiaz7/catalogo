{% extends 'admin/base.html.twig' %}

{% block title %}Editar Artículo{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Editar Artículo</h1>
        <a href="{{ path('app_admin_articulo_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.codigo) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.subrubro) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.detalle) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.marca) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.modelo) }}
                            </div>
                        </div>

                        

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.precioLista) }}
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Opciones</label>
                                    <div>
                                        {{ form_row(form.destacado) }}
                                        {{ form_row(form.novedad) }}
                                        {{ form_row(form.habilitadoWeb) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.archivos) }}
                                <small class="form-text text-muted">
                                    Formatos permitidos: JPG, PNG O PDF. Tamaño máximo: 2MB
                                </small>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <!-- Imágenes actuales -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Imágenes actuales</h5>
                </div>
                <div class="card-body">
                    {% if articulo.archivos|length > 0 %}
                        <div class="row">
                            {% for archivo in articulo.archivos %}
                                {% if archivo.tipoArchivo == 'imagen' %}
                                    <div class="col-6 mb-3">
                                        <div class="card">
                                            <img src="{{ asset( directorio_archivos ~ archivo.rutaArchivo) }}" 
                                             class="card-img-top" alt="{{ articulo.detalle }}">
                                            <div class="card-body p-2">
                                                <div class="btn-group w-100" role="group">
                                                    <form method="post" 
                                                        action="{{ path('app_admin_articulo_set_imagen_principal', {'id': archivo.id}) }}"
                                                        style="display: inline;">
                                                        <input type="hidden" name="_token" 
                                                            value="{{ csrf_token('principal' ~ archivo.id) }}">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-primary"
                                                                {{ archivo.esPrincipal ? 'disabled' : '' }}>
                                                            {% if archivo.esPrincipal %}
                                                                <i class="bi bi-star-fill"></i>
                                                            {% else %}
                                                                <i class="bi bi-star"></i>
                                                            {% endif %}
                                                        </button>
                                                    </form>
                                                    <form method="post" 
                                                        action="{{ path('app_admin_articulo_delete_imagen', {'id': archivo.id}) }}"
                                                        onsubmit="return confirm('¿Está seguro que desea eliminar esta imagen?');"
                                                        style="display: inline;">
                                                        <input type="hidden" name="_token" 
                                                            value="{{ csrf_token('delete' ~ archivo.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">No hay imágenes cargadas</p>
                    {% endif %}
                </div>

                
                    <ul class="list-group list-group-flush">
                        {% for archivo in articulo.archivos %}
                            {% if archivo.tipoArchivo == 'documento' %}
                                <li class="list-group-item">
                                    <a href="{{ asset(directorio_archivos ~ archivo.rutaArchivo) }}" 
                                        target="_blank" 
                                        class="text-decoration-none">
                                        <i class="bi bi-file-text pe-1"></i>
                                        {{ archivo.nombreArchivo }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                        {% if articulo.archivos|filter(a => a.tipoArchivo == 'documento')|length == 0 %}
                            <li class="list-group-item text-muted">No hay documentos adjuntos</li>
                        {% endif %}
                    </ul>
                
            </div>
        </div>
    </div>
</div>
{% endblock %} 