{% extends 'admin/base.html.twig' %}

{% block title %}Gestión de Artículos{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Artículos</h1>
        <a href="{{ path('app_admin_articulo_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Artículo
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="buscar" class="form-label">Buscar</label>
                    <input type="text" name="buscar" class="form-control" 
                           placeholder="Buscar..." value="{{ app.request.query.get('buscar') }}">
                </div>
                <div class="col-md-3">
                    <label for="rubro" class="form-label">Rubro</label>
                    <select class="form-select" id="rubro" name="rubro">
                        <option value="">Todos</option>
                        {% for rubro in rubros %}
                            <option value="{{ rubro.codigo }}" 
                                    {% if app.request.query.get('rubro') == rubro.codigo %}selected{% endif %}>
                                {{ rubro.nombre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="habilitado" class="form-label">Estado</label>
                    <select class="form-select" id="habilitado" name="habilitado">
                        <option value="1" {% if app.request.query.get('habilitado') == '1' %}selected{% endif %}>Habilitados</option>
                        <option value="0" {% if app.request.query.get('habilitado') == '0' %}selected{% endif %}>Deshabilitados</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="buscar" class="form-label">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a href="{{ path('app_admin_articulo_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Listado -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Detalle</th>
                            <th>Marca</th>
                            <th>Precio</th>
                            <th>Hab. Web</th>
                            <th>Hab. Gestión</th>
                            <th>Destacado</th>
                            <th>Novedad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>


                    <tbody>
                        {% for articulo in articulos %}
                            <tr>
                                <td>{{ articulo.codigo }}</td>
                                <td>
                                    <strong>{{ articulo.detalle }}</strong><br>
                                    <small class="text-muted">{{ articulo.subrubro.rubro.nombre }} > {{ articulo.subrubro.nombre }}</small>
                                </td>
                                <td>{{ articulo.marca }}</td>
                                <td>${{ articulo.precioLista|number_format(2, ',', '.') }}</td>
                                <td>
                                    {% if articulo.habilitadoWeb %}
                                        <span class="badge bg-success">Habilitado</span>
                                    {% else %}
                                        <span class="badge bg-danger">Deshabilitado</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if articulo.habilitadoGestion %}
                                        <span class="badge bg-success">Habilitado</span>
                                    {% else %}
                                        <span class="badge bg-danger">Deshabilitado</span>

                                    {% endif %}
                                </td>
                                <td>
                                    {% if articulo.destacado %}
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    {% else %}
                                        <i class="bi bi-x-circle-fill text-danger"></i>
                                    {% endif %}
                                </td>
                                <td>

                                    {% if articulo.novedad %}
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    {% else %}
                                        <i class="bi bi-x-circle-fill text-danger"></i>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="input-group" role="group">
                                        <a href="{{ path('app_admin_articulo_edit', {'codigo': articulo.codigo}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <form method="post" 
                                              action="{{ path('app_admin_articulo_toggle_habilitado', {'codigo': articulo.codigo}) }}" 
                                              style="display: inline;">
                                            <input type="hidden" name="_token" 
                                                   value="{{ csrf_token('toggle-habilitado' ~ articulo.codigo) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-success">
                                                {% if articulo.habilitadoWeb %}
                                                    <i class="bi bi-x-circle"></i> Deshabilitar
                                                {% else %}
                                                    <i class="bi bi-check-circle"></i> Habilitar
                                                {% endif %}
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No hay artículos registrados</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(articulos, 'admin/shared/_pagination.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 