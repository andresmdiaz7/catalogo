{% extends 'admin/base.html.twig' %}

{% block title %}Nuevo Artículo{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Nuevo Artículo</h1>
        <a href="{{ path('app_admin_articulo_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.codigo) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.subrubro) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.detalle) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.marca) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.modelo) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.descripcion) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.observaciones) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.precioLista) }}
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Opciones</label>
                            <div>
                                {{ form_row(form.destacado) }}
                                {{ form_row(form.novedad) }}
                                {{ form_row(form.habilitadoWeb) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.imagenes) }}
                        <small class="form-text text-muted">
                            Formatos permitidos: JPG, PNG. Tamaño máximo: 2MB
                        </small>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 