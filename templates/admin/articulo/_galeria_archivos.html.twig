{# templates/admin/articulo/_galeria_archivos.html.twig #}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Archivos asociados</h5>
        <div>
            <button type="button" class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#modalAsociarArchivo">
                <i class="fas fa-link me-1"></i> Asociar existentes
            </button>
            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#modalSubirArchivo">
                <i class="fas fa-upload me-1"></i> Subir nuevos
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row" id="galeriaArchivos">
            {% if articulo.articuloArchivos|length > 0 %}
                {% for articuloArchivo in articulo.articuloArchivos %}
                    <div class="col-md-3 mb-3">
                        <div class="card h-100">
                            <div class="card-archivo">
                                {% if articuloArchivo.archivo.esImagen %}
                                    <img src="{{ asset('uploads/archivos/' ~ articuloArchivo.archivo.filePath) }}" 
                                         class="img-thumbnail" 
                                         alt="{{ articuloArchivo.archivo.fileName }}">
                                {% else %}
                                    <div class="icono-archivo">
                                        <i class="fas fa-file-{{ articuloArchivo.archivo.tipoIcono }} fa-4x"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <p class="card-text archivo-nombre">{{ articuloArchivo.archivo.fileName }}</p>
                                <p class="card-text text-muted">
                                    <small>{{ articuloArchivo.archivo.tamanioFormateado }}</small>
                                </p>
                            </div>
                            <div class="card-footer d-flex justify-content-between">
                                <div class="form-check">
                                    <input class="form-check-input archivo-principal" 
                                           type="radio" 
                                           name="archivoPrincipal" 
                                           id="archivo{{ articuloArchivo.id }}"
                                           value="{{ articuloArchivo.id }}" 
                                           {{ articuloArchivo.esPrincipal ? 'checked' : '' }}
                                           data-url="{{ path('app_admin_articulo_archivo_principal', {'id': articuloArchivo.id}) }}">
                                    <label class="form-check-label" for="archivo{{ articuloArchivo.id }}">
                                        Principal
                                    </label>
                                </div>
                                <button type="button" 
                                        class="btn btn-sm btn-outline-danger btn-desasociar" 
                                        data-id="{{ articuloArchivo.id }}"
                                        data-url="{{ path('app_admin_articulo_archivo_desasociar', {'id': articuloArchivo.id}) }}">
                                    <i class="fas fa-unlink"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        No hay archivos asociados a este art√≠culo.
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>