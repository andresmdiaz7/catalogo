{% extends 'admin/base.html.twig' %}

{% block title %}Agregar Sección al Menú {{ menu.nombre }}{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Agregar Sección al Menú: {{ menu.nombre }}</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                        <a href="{{ path('app_admin_menu_secciones', {'id': menu.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}