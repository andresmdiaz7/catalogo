{% extends 'admin/base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Editar Usuario</h1>
            <a href="{{ path('app_admin_usuario_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    {# Mostrar errores globales del formulario #}
                    {{ form_errors(form) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.nombre) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.apellido) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.plainPassword, {
                                'label': 'Nueva Contraseña',
                                'required': false,
                                'help': 'Dejar en blanco para mantener la contraseña actual'
                            }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.tipoUsuario) }}
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 