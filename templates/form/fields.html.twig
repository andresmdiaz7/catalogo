{% block choice_widget_expanded %}
    <div class="mb-3">
        {% for child in form %}
            <div class="form-check">
                {{- form_widget(child, {
                    attr: {class: 'form-check-input'}
                }) -}}
                {{- form_label(child, null, {
                    label_attr: {class: 'form-check-label'}
                }) -}}
            </div>
        {% endfor %}
    </div>
{% endblock %} 