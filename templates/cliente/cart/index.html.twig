{% extends 'base.html.twig' %}

{% block title %}Carrito de Compras{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Carrito de Compras</h1>
        {% if items|length > 0 %}
            <div>
                <a href="{{ path('app_cliente_cart_clear') }}" class="btn btn-danger" 
                   onclick="return confirm('¿Está seguro que desea vaciar el carrito?')">
                    <i class="bi bi-trash"></i> Vaciar carrito
                </a>
            </div>
        {% endif %}
    </div>

    {% if items|length > 0 %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Detalle</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th class="text-end">Precio</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Subtotal</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>{{ item.codigo }}</td>
                                    <td>{{ item.detalle }}</td>
                                    <td>{{ item.marca }}</td>
                                    <td>{{ item.modelo }}</td>
                                    <td class="text-end">${{ item.precio|number_format(2, ',', '.') }}</td>
                                    <td class="text-center">
                                        <div class="input-group input-group-sm">
                                            <a href="{{ path('app_cliente_cart_decrease', {'codigo': item.codigo}) }}" 
                                               class="btn btn-outline-secondary">
                                                <i class="bi bi-dash"></i>
                                            </a>
                                            <input type="text" class="form-control text-center" value="{{ item.cantidad }}" readonly style="width: 50px;">
                                            <a href="{{ path('app_cliente_cart_increase', {'codigo': item.codigo}) }}" 
                                               class="btn btn-outline-secondary">
                                                <i class="bi bi-plus"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="text-end">${{ (item.precio * item.cantidad)|number_format(2, ',', '.') }}</td>

                                    <td class="text-end">
                                        <a href="{{ path('app_cliente_cart_remove', {'codigo': item.codigo}) }}" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('¿Está seguro que desea eliminar este artículo?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td colspan="6" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end"><strong>${{ total|number_format(2, ',', '.') }}</strong></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                    <a href="{{ path('app_catalogo_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Seguir comprando
                    </a>
                    <form action="{{ path('app_cliente_pedido_create') }}" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Confirmar pedido
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            El carrito está vacío. <a href="{{ path('app_catalogo_index') }}">Ver artículos disponibles</a>
        </div>
    {% endif %}
</div>
{% endblock %}