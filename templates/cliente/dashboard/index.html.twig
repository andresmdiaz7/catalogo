{% extends 'base.html.twig' %}

{% block title %}Panel de Cliente{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-3">
    <div class="row">
        <div class="col-md-6">
            {# Deuda pendiente #}
            <div class="card mb-4 border-danger rounded-4 overflow-hidden">
                <div class="card-body bg-light">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 ms-2">
                            <h5 class="mb-1">Estimado cliente, usted tiene una deuda pendiente de:</h5>
                            <h3 class="text-danger mb-2 fw-normal">${{ deuda_cuenta_corriente|number_format(2, ',', '.') }}</h3>
                            <p class="mb-2">Por favor, póngase en contacto con el sector de cuentas corrientes para realizar el pago.</p>
                            <p class="mb-0"><i class="bi bi-telephone me-2"></i>+54 9 223 499 1603/04</p>
                            <p class="mb-0">
                                <i class="bi bi-whatsapp me-2"></i>
                                <a href="https://wa.me/5492235292340?text=Hola%2C%20soy%20el%20cliente%20{{ app.user.razonSocial }}%20numero%20de%20cuenta%20{{ app.user.codigo }}%2C%20me%20comunico%20por%20la%20deuda%20de%20${{ deuda_cuenta_corriente|number_format(2, ',', '.') }}" target="_blank" class="text-decoration-none">
                                    +54 9 223 529 2340
                                </a>
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-envelope me-2"></i>
                                <a href="mailto:cuentascorrientes@ciardi.com.ar" class="text-decoration-none">
                                    cuentascorrientes@ciardi.com.ar
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            {# Información de la cuenta #}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Información de la Cuenta N° {{ app.user.codigo }}</h5>
                </div>
                <div class="card-body">
                
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center bg-light rounded p-3">
                                <i class="bi bi-building fs-3 me-3 text-primary"></i>
                                <div>
                                    <small class="text-muted">Razón Social</small>
                                    <h5 class="mb-0">{{ app.user.razonSocial }}</h5>
                                    <small class="text-muted">CUIT {{ app.user.cuit }}</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="bg-light rounded p-3">
                                <small class="text-muted">Email</small>
                                <h6 class="mb-0">{{ app.user.email }}</h6>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="bg-light rounded p-3">
                                <small class="text-muted">Teléfono</small>
                                <h6 class="mb-0">{{ app.user.telefono }}</h6>
                            </div>
                        </div>

                        {% if app.user.vendedor is not null %}
                        <div class="col-12">
                            <div class="d-flex align-items-center bg-light rounded p-3">
                                <i class="bi bi-person fs-3 me-3 text-success"></i>
                                <div>
                                    <small class="text-muted">Vendedor</small>
                                    <h6 class="mb-0">{{ app.user.vendedor.nombre }} {{ app.user.vendedor.apellido }}</h6>
                                    <small class="text-primary">{{ app.user.vendedor.email }}</small>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        {% if app.user.responsableLogistica is not null %}
                        <div class="col-12">
                            <div class="d-flex align-items-center bg-light rounded p-3">
                                <i class="bi bi-truck fs-3 me-3 text-info"></i>
                                <div>
                                    <small class="text-muted">Responsable de logística</small>
                                    <h6 class="mb-0">{{ app.user.responsableLogistica.nombre }} {{ app.user.responsableLogistica.apellido }}</h6>
                                    <small class="text-primary">{{ app.user.responsableLogistica.email }}</small>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            {# Últimos pedidos #}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Últimos Pedidos</h5>
                </div>
                <div class="card-body">
                    {% if pedidos_recientes|length > 0 %}
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Fecha</th>
                                        <th>Total</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for pedido in pedidos_recientes %}
                                        <tr>
                                            <td>{{ pedido.id }}</td>
                                            <td>{{ pedido.fecha|date('d/m/Y') }}</td>
                                            <td>
                                                ${{ pedido.detalles|reduce((total, detalle) => 
                                            total + (detalle.precioUnitario * detalle.cantidad), 0)|number_format(2, ',', '.') }}
                                            </td>
                                            <td>
                                                {% if pedido.estado == 'enviado' %}
                                                    <span class="badge bg-success">Enviado</span>
                                                {% else %}
                                                    <span class="badge bg-warning">Pendiente</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">No hay pedidos recientes.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 